module ch.fhnw.lsp.messages.textdocument.didopen.DidOpenTypes where

import Data.JSON

import ch.fhnw.lsp.messages.GeneralLspTypes

data DidOpenRequestParams = DidOpenRequestParams { textDocument :: TextDocumentItem }

instance FromJSON DidOpenRequestParams where
  fromJSON (Struct as) = fmap DidOpenRequestParams $ field "textDocument" as
  fromJSON garbage     = fail ("couldn't decode DidOpenRequestParams from: " ++ show garbage)

